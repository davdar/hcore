.PHONY: build rebuild configure install reinstall clean interact reinstall-all

build:
	cabal build

rebuild: clean build

configure:
	cabal configure

install:
	cabal install

reinstall:
	cabal install --force-reinstalls

clean:
	cabal clean

bench:
	./dist/build/bench/bench -o report.html

interact:
	ghci -isrc -XDataKinds -XScopedTypeVariables -XTypeOperators -interactive-print=Text.Pretty.pprintLn Interact.hs

interact-no-local:
	ghci -XDataKinds -XScopedTypeVariables -XTypeOperators -interactive-print=Text.Pretty.pprintLn Interact.hs

interact-no-local2:
	ghci -XDataKinds -XScopedTypeVariables -XTypeOperators


reinstall-all:
	make -C ../ reinstall
